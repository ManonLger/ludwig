  },
  "devDependencies": {
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "chai": "^3.0.0",
    "eslint": "^2.2.0",
    "gulp": "^3.9.1",
    "isparta": "^4.0.0",
    "mocha": "^2.1.0",
    "mocha-istanbul": "~0.2.0",
    "mocha-lcov-reporter": "^1.0.0",
    "proxyquire": "^1.7.4",
    "sinon": "^1.12.2",
