  },
  "engines": {
    "node": "^4.2.0"
  },
  "config": {
    "clientID": "client ID you'll need to set via npm (key = ludwig:clientID): https://docs.npmjs.com/cli/config",
    "clientSecret": "client secret you'll need to set via npm (key = ludwig:clientSecret): https://docs.npmjs.com/cli/config",
    "AccessControlAllowOrigin": "url pattern for CORS configuration (key = ludwig:AccessControlAllowOrigin)",
    "testFeatures": "enable testing features or not (key = ludwig:testFeatures)"
  },
  "files": [
    "controllers",
    "dist/bundle.js",
    "helpers",
    "routers",
    "views",
    "server.js",
    "ludwig-conf.js",
    "scripts",
    "webpack.config.js"
  ],
  "scripts": {
    "build": "cp -r node_modules/bootstrap/dist ./dist/bootstrap && webpack",
    "prepublish": "npm run build",
    "start": "babel-node server.js",
    "test": "mocha --compilers js:babel-core/register --recursive ./test/",
    "qualimetry": "babel-node node_modules/.bin/isparta cover _mocha --dir qualimetry/cover -- --compilers js:babel-core/register -R spec test/*",
    "linting": "eslint ./js ./controllers ./routers ./test ./helpers ./*.js"
  }
}
