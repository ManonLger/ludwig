  },
  "files": [
    "dist",
    "ludwig-conf-sample.js"
  ],
  "scripts": {
    "build:back": "mkdir -p dist && babel --copy-files --out-dir dist src",
    "build:front": "mkdir -p dist && cp -r node_modules/bootstrap/dist ./dist/bootstrap && cp -r ./src/views/css/ ./dist/ && webpack",
    "build": "npm run build:front && npm run build:back",
    "prepublish": "npm run build",
    "dev": "babel-watch src/server.js",
    "start": "node dist/server.js",
    "test": "mocha --compilers js:babel-core/register --recursive ./src/test/",
    "qualimetry": "istanbul cover _mocha --dir qualimetry/cover -- --compilers js:babel-core/register -R spec src/test/* src/test/batch/*",
    "lint": "eslint src",
    "clean": "rm -rf node_modules && rm -rf dist",
    "insertTestReportData": "babel-node src/batch/runner.js"
  }
}
