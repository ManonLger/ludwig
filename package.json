  "devDependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-loader": "^6.2.3",
    "babel-preset-es2015": "^6.5.0",
    "babel-watch": "^2",
    "bootstrap": "^3.3.6",
    "chai": "^3.0.0",
    "eslint": "^2.2.0",
    "gulp": "^3.9.1",
